package ejercicio21;

import utilidades.Leer;

public class Principal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		 int respuesta = 0, topeSuma = 0, topeResta = 0, topeMulti = 0, topeDividir = 0;
	     int parImpar = 0;
	     int DOS = 2;
	     double num = 0, suma = 0, resta = 0, multi = 1, division = 0, numeroPar = 0;
	     
        do {
            System.out.println("\nÂ¿QuÃ© desea hacer?");
            System.out.println("1. Sumar");
            System.out.println("2. Restar");
            System.out.println("3. Dividir");
            System.out.println("4. Multiplicar");
            System.out.println("5. Comprobar si un nÃºmero es par o impar");
            System.out.println("0. Salir");
           System.out.println("Opcion");
            respuesta = Leer.datoInt();

            switch (respuesta) {
            case 1:
                // SUMA
                suma = 0;
                System.out.println("\nUsted ha elegido SUMA");
                System.out.print("Â¿CuÃ¡ntos nÃºmeros desea sumar? ");
                topeSuma = Leer.datoInt();

                for (int i = 0; i < topeSuma; i++) {
                    System.out.print("NÃºmero " + (i + 1) + ": ");
                    num = Leer.datoDouble();
                    suma += num;
                }

                parImpar = (int) suma % DOS;
                if (parImpar == 0)
                    System.out.println("El resultado es PAR");
                else
                    System.out.println("El resultado es IMPAR");

                System.out.printf("La suma final es: %.2f\n", suma);
                break;

            case 2:
                // RESTA
                resta = 0;
                System.out.println("\nUsted ha elegido RESTA");
                System.out.print("Â¿CuÃ¡ntos nÃºmeros desea restar? ");
                topeResta = Leer.datoInt();

                for (int i = 0; i < topeResta; i++) {
                    System.out.print("NÃºmero " + (i + 1) + ": ");
                    num = Leer.datoDouble();
                    if (i == 0)
                        resta = num;
                    else
                        resta -= num;
                }

                parImpar = (int) resta % DOS;
                if (parImpar == 0)
                    System.out.println("El resultado es PAR");
                else
                    System.out.println("El resultado es IMPAR");

                System.out.printf("La resta final es: %.2f\n", resta);
                break;

            case 3:
                // DIVISIÃ“N
                division = 0;
                System.out.println("\nUsted ha elegido DIVISIÃ“N");
                System.out.print("Â¿CuÃ¡ntos nÃºmeros desea dividir? ");
                topeDividir = Leer.datoInt();

                for (int i = 0; i < topeDividir; i++) {
                    System.out.print("NÃºmero " + (i + 1) + ": ");
                    num = Leer.datoDouble();

                    if (i == 0) {
                        division = num;
                    } else {
                        if (num == 0) {
                            System.out.println("âŒ No se puede dividir entre 0. Se ignora este nÃºmero.");
                            continue;
                        }
                        division /= num;
                    }
                }

                parImpar = (int) division % DOS;
                if (parImpar == 0)
                    System.out.println("El resultado es PAR");
                else
                    System.out.println("El resultado es IMPAR");

                System.out.printf("La divisiÃ³n final es: %.2f\n", division);
                break;

            case 4:
                // MULTIPLICACIÃ“N
                multi = 1;
                System.out.println("\nUsted ha elegido MULTIPLICACIÃ“N");
                System.out.print("Â¿CuÃ¡ntos nÃºmeros desea multiplicar? ");
                topeMulti = Leer.datoInt();

                for (int i = 0; i < topeMulti; i++) {
                    System.out.print("NÃºmero " + (i + 1) + ": ");
                    num = Leer.datoDouble();
                    multi *= num;
                }

                parImpar = (int) multi % DOS;
                if (parImpar == 0)
                    System.out.println("El resultado es PAR");
                else
                    System.out.println("El resultado es IMPAR");

                System.out.printf("La multiplicaciÃ³n final es: %.2f\n", multi);
                break;

            case 5:
                // PAR O IMPAR DIRECTO (sin submenÃº)
                System.out.println("\nUsted ha elegido comprobar PAR o IMPAR");
                System.out.print("Introduzca un nÃºmero: ");
                numeroPar = Leer.datoDouble();

                parImpar = (int) numeroPar % DOS;
                if (parImpar == 0)
                    System.out.println("El nÃºmero es PAR");
                else
                    System.out.println("El nÃºmero es IMPAR");
                break;

            case 0:
                System.out.println("ðŸ‘‹ Saliendo de la calculadora...");
                break;

            default:
                System.out.println("âŒ OpciÃ³n no vÃ¡lida. Intente de nuevo.");
                break;
            }

        } while (respuesta != 0);
    }
