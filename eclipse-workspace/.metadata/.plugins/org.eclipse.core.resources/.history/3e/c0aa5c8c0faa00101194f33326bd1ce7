package ejercicio21;

import utilidades.Leer;

public class Principal {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * Realizar una “mini-calculadora”, que realice las siguientes operaciones:
		 * suma, resta, multiplicación, división y decir si un número es par o impar. Se
		 * hará con un menú, y se pedirá en cada caso del switch los datos necesarios
		 * para realizar las operaciones. Se valorarán las comprobaciones que se hagan
		 * sobre los datos introducidos (por ejemplo, no dividir por cero).
		 */

		int respuesta, topeSuma,topeMulti;
		double numSuma, suma= 0,numMulti,multi=0;

		System.out.println("Bienvenido a la Mini-Calculadora");

		do {

			System.out.println("¿Que desea hacer?\n");
			System.out.println("Pulse 1 para sumar ");
			System.out.println("Pulse 2 para restar ");
			System.out.println("Pulse 3 para dividir ");
			System.out.println("Pulse 4 para multiplicar");
			System.out.println("Pulse 0 para salir del programa");
			respuesta = Leer.datoInt();

			switch (respuesta) {
			case 1:
				System.out.println("Usted ha elegido suma ");
				System.out.println("A continuación diga cuantos numeros desea sumar");
				topeSuma = Leer.datoInt();
				for (int i = 0; i < topeSuma; i++) {
					System.out.println("Diga el número " + (i + 1) + "que desea sumar");
					numSuma = Leer.datoDouble();
					suma += numSuma;
				}
				System.out.printf("La suma final de todos los números es: %.2f ", suma);

				break;
			case 2:
				System.out.println("Usted ha elegido Multiplicar ");
				System.out.println("A continuación diga cuantos numeros desea multiplicar");
				topeMulti = Leer.datoInt();
				for (int i = 0; i < topeMulti; i++) {
					System.out.println("Diga el número " + (i + 1) + "que desea sumar");
					numMulti = Leer.datoDouble();
					multi+=numMulti;
				}
				System.out.printf("La Multiplicacion final de todos los números es: %.2f ", multi);

				break; 
			case 3:
				break;
			case 4:
				break;
			default:
				break;
			}

		} while (respuesta != 0);

	}

}
